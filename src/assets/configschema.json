{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "title",
        "description",
        "codesnippets",
        "texts",
        "documentations",
        "outputs"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "codesnippets": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "lines"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "lines": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "texts": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "lines"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "lines": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "blocks": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "lines"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "oneOf": [
                            {
                                "const": "comment"
                            },
                            {
                                "const": "code"
                            },
                            {
                                "const": "blank"
                            }
                        ]
                    },
                    "language": {
                        "type": "string"
                    },
                    "lines": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "id",
                                "value"
                            ],
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": ["string", "integer", "boolean", "array"]
                                }
                            }
                        }
                    },
                    "visibleexpression": {
                        "type": "string"
                    }
                }
            }
        },
        "documentations": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "title",
                    "description",
                    "blocks"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "blocks": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "id",
                                "value"
                            ],
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": ["string", "integer", "boolean", "array"]
                                }
                            }
                        }
                    }
                }
            }
        },
        "outputs": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "outputtype",
                    "documentationid"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "outputtype": {
                        "type": "string",
                        "oneOf": [
                            {
                                "const": "php"
                            },
                            {
                                "const": "markdown"
                            },
                            {
                                "const": "html"
                            },
                            {
                                "const": "custom"
                            }
                        ]
                    },
                    "documentationid": {
                        "type": "string"
                    },
                    "filepath": {
                        "type": "string"
                    },
                    "filename": {
                        "type": "string"
                    },
                    "filepathisabsolute": {
                        "type": "boolean"
                    },
                    "titlemode": {
                        "type": "integer",
                        "oneOf": [
                            {
                                "const": 0
                            },
                            {
                                "const": 1
                            },
                            {
                                "const": 2
                            }
                        ]
                    },
                    "descriptionmode": {
                        "type": "integer",
                        "oneOf": [
                            {
                                "const": 0
                            },
                            {
                                "const": 1
                            },
                            {
                                "const": 2
                            }
                        ]
                    },
                    "outputdestination": {
                        "type": "integer",
                        "oneOf": [
                            {
                                "const": 0
                            },
                            {
                                "const": 1
                            }
                        ]
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "id",
                                "value"
                            ],
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": ["string", "integer", "boolean", "array"]
                                }
                            }
                        }
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "outputdestination": {
                                    "const": 0
                                }
                            }
                        },
                        "then": {
                            "required": [
                                "filepath",
                                "filename"
                            ]
                        }
                    }
                ]
            }
        }
    }
}